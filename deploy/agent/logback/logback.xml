<!--for further documentation -->
<configuration>
    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/data/work/dianyi/log/yscheduler-agent/app.log</File>
        <Append>true</Append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/work/dianyi/log/yscheduler-agent/app.log.%d{yyyy-MM-dd}.zip
            </fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{req.uriWithQueryString}] [%thread] %logger - %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name="com.yeahmobi.yscheduler" level="INFO"/>

    <root level="ERROR">
        <appender-ref ref="fileAppender"/>
    </root>
</configuration>
